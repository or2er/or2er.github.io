{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "next",
        // "plugin:@typescript-eslint/recommended", // Enable only if TS is used
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["only-warn", "@typescript-eslint", "react"],
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["off"],
        "react/react-in-jsx-scope": ["off"],
        "react/prop-types": ["warn"],
        "no-unused-vars": ["warn"]
    }
}
